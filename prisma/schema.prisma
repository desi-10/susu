// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  userId   String @id @default(uuid())
  username String @unique
  password String

  cards      Card[]
  deposits   Deposit[]
  withdrawal withdrawal[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Customer {
  customerId   String  @id @default(uuid())
  customerName String
  gender       String?
  location     String?
  nextOfKin    String?

  totalAmount Float @default(0)

  cards      Card[]
  desposit   Deposit[]
  withdrawal withdrawal[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Card {
  cardId String @id @default(uuid())

  rate      Float    @default(0)
  startDate DateTime @default(now())
  hasEnded  Boolean  @default(false)

  totalAmount Float? @default(0)

  deposits   Deposit[]
  withdrawal withdrawal[]

  customer    Customer @relation(fields: [customer_id], references: [customerId])
  customer_id String

  user    User   @relation(fields: [user_id], references: [userId])
  user_id String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model withdrawal {
  id String @id @default(uuid())

  amount Float @default(0)

  card    Card   @relation(fields: [card_id], references: [cardId])
  card_id String

  customer    Customer @relation(fields: [customer_id], references: [customerId])
  customer_id String

  user    User   @relation(fields: [user_id], references: [userId])
  user_id String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Deposit {
  deposit_id String @id @default(uuid())

  card    Card   @relation(fields: [card_id], references: [cardId])
  card_id String

  rate Float  @default(0)

  user    User   @relation(fields: [user_id], references: [userId])
  user_id String

  customer    Customer @relation(fields: [customer_id], references: [customerId])
  customer_id String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
