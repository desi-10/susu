// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  username String @unique
  password String

  cards  Card[]
  deposits  Deposit[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Customer {
  customer_id   String @id @default(uuid())
  customer_name String

  cards Card[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Card {
  card_id String @id @default(uuid())

  rate       Float    @default(0.00)
  start_date DateTime @default(now())
  has_ended  Boolean  @default(false)


  deposits Deposit[]

  customer   Customer @relation(fields: [customerId], references: [customer_id])
  customerId String

  user   User   @relation(fields: [userId], references: [id])
  userId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Deposit {
  deposit_id String @id @default(uuid())

  card   Card   @relation(fields: [cardId], references: [card_id])
  cardId String

  user   User   @relation(fields: [userId], references: [id])
  userId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
